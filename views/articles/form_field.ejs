<!-- TITLE -->
<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="<%= article.title %>" name="title" class="form-control" required >
</div>
<br>

<!-- DESCRIPTION -->
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<br>

<!-- MARKDOWN -->
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>



<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>